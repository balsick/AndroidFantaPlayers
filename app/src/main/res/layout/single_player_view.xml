<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageView
        android:id="@+id/fantaplayerTeamIcon"
        android:adjustViewBounds="true"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:id="@+id/fantaplayerTeamVsIcon"
        android:adjustViewBounds="true"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        />
    <ImageView
        android:id="@+id/fantaplayerStatusIcon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:layout_toStartOf="@id/fantaplayerTeamVsIcon"
        />
    <TextView
        android:id="@+id/fantaplayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_toEndOf="@id/fantaplayerTeamIcon"
        android:layout_toStartOf="@id/fantaplayerStatusIcon"
        />
</RelativeLayout>